@page "/dashboard"
@using Microsoft.AspNetCore.Authorization
@using Application.Queries.Customers
@using Application.Queries.Events
@attribute [Authorize(Roles = "Customer")]

@inject GetCustomerByUserIdQueryHandler GetCustomerByUserIdHandler
@inject GetEventsByCustomerIdQueryHandler GetEventsByCustomerIdHandler
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Dashboard</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4">My Dashboard</h1>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (customer == null)
    {
        <div class="alert alert-warning">
            <h4>Customer Profile Not Found</h4>
            <p>We couldn't find your customer profile. Please contact support.</p>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Total Events</h5>
                        <h2 class="text-primary">@events.Count</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Upcoming Events</h5>
                        <h2 class="text-success">@upcomingEvents.Count</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Pending Requests</h5>
                        <h2 class="text-warning">@requestedEvents.Count</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">My Events</h5>
                <a href="/events/create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Event
                </a>
            </div>
            <div class="card-body">
                @if (events.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Event Name</th>
                                    <th>Location</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var evt in events.OrderByDescending(e => e.StartDate))
                                {
                                    <tr>
                                        <td>@evt.Name</td>
                                        <td>@evt.Location</td>
                                        <td>@evt.StartDate.ToString("dd-MM-yyyy")</td>
                                        <td>@evt.EndDate.ToString("dd-MM-yyyy")</td>
                                        <td>
                                            <span class="badge @GetStatusBadgeClass(evt.Status)">
                                                @evt.Status
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/events/@evt.Id" class="btn btn-sm btn-outline-primary">View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <p class="text-muted">You haven't created any events yet.</p>
                        <a href="/events/create" class="btn btn-primary">Create Your First Event</a>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private CustomerDTO? customer;
    private List<EventDTO> events = new();
    private bool isLoading = true;

    private List<EventDTO> upcomingEvents => events.Where(e => e.StartDate >= DateTime.Now).ToList();
    private List<EventDTO> requestedEvents => events.Where(e => e.Status == EventStatusDTO.Requested).ToList();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                var userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                if (!string.IsNullOrEmpty(userId))
                {
                    // Get customer profile
                    var getCustomerQuery = new GetCustomerByUserIdQuery(userId);
                    customer = await GetCustomerByUserIdHandler.Handle(getCustomerQuery);

                    if (customer != null)
                    {
                        // Get events for this customer
                        var getEventsQuery = new GetEventsByCustomerIdQuery(customer.Id);
                        events = await GetEventsByCustomerIdHandler.Handle(getEventsQuery);
                    }
                }
            }
        }
        catch (Exception ex)
        {
            // Log error
            Console.WriteLine($"Error loading dashboard: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetStatusBadgeClass(EventStatusDTO status)
    {
        return status switch
        {
            EventStatusDTO.Requested => "bg-warning",
            EventStatusDTO.Planned => "bg-info",
            EventStatusDTO.Confirmed => "bg-primary",
            EventStatusDTO.Active => "bg-success",
            EventStatusDTO.Completed => "bg-secondary",
            EventStatusDTO.SendInvoice => "bg-dark",
            EventStatusDTO.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
