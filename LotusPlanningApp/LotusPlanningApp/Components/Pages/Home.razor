@page "/"
@inject NavigationManager Navigation

<PageTitle>LOTUS Planning App</PageTitle>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-heartbeat fa-4x text-primary"></i>
                </div>
                <h1 class="display-4 text-primary mb-3">LOTUS Planning App</h1>
                <p class="lead text-muted mb-4">
                    Beheer LOTUS-opdrachten, diensten en personeelsinzet efficiënt voor je team.
                </p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a href="/dashboard" class="btn btn-primary btn-lg">
                        <i class="fas fa-tachometer-alt me-2"></i>Bekijk dashboard
                    </a>
                    <a href="/events" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-calendar-alt me-2"></i>Opdrachten beheren
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row py-5">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-calendar-check fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">Opdrachtbeheer</h5>
                    <p class="card-text text-muted">
                        Maak en beheer LOTUS-opdrachten met gedetailleerde planning en locatie-informatie.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-clock fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">Dienstplanning</h5>
                    <p class="card-text text-muted">
                        Plan diensten binnen opdrachten en wijs gekwalificeerd personeel toe voor voldoende bezetting.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-users fa-3x text-info"></i>
                    </div>
                    <h5 class="card-title">Personeelsbeheer</h5>
                    <p class="card-text text-muted">
                        Beheer een bestand van gekwalificeerd medisch personeel met certificeringen en beschikbaarheid.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        // Auto-redirect to dashboard for returning users
        // Navigation.NavigateTo("/dashboard");
    }
}
