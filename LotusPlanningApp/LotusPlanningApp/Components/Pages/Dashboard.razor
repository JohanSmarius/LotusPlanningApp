@page "/dashboard"
@attribute [Authorize]
@using Application
@using Application.DataAdapters
@using Entities
@using Microsoft.AspNetCore.Identity
@using LotusPlanningApp.Data
@using Microsoft.AspNetCore.Components.Authorization
@inject IEventRepository EventService
@inject IShiftRepository ShiftService
@inject IStaffRepository StaffService
@inject IStaffAssignmentRepository StaffAssignmentService
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer

<PageTitle>Dashboard - LOTUS Planning App</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-0 text-primary">
                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
            </h1>
            <p class="text-muted">LOTUS-opdrachten en dienstenbeheer</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        @if (isAdmin)
        {
            <!-- Admin Statistics Cards -->
            <div class="row mb-4">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-primary bg-gradient rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="fas fa-calendar-alt text-white"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Aankomende opdrachten</h6>
                                <h4 class="mb-0">@upcomingEvents.Count</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-success bg-gradient rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="fas fa-clock text-white"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Actieve diensten</h6>
                                <h4 class="mb-0">@activeShifts.Count</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-info bg-gradient rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="fas fa-users text-white"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Actief personeel</h6>
                                <h4 class="mb-0">@activeStaff.Count</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
        else
        {
            <!-- User-specific content -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-user-clock me-2"></i>Mijn toegewezen diensten
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (myAssignments.Any())
                            {
                                <div class="row">
                                    @foreach (var assignment in myAssignments.OrderBy(a => a.Shift.StartTime))
                                    {
                                        var shift = assignment.Shift;
                                        var eventItem = shift.Event;
                                        <div class="col-md-6 col-lg-4 mb-3">
                                            <div class="card h-100 border-0 bg-light">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <h6 class="card-title mb-0">@shift.Name</h6>
                                                        <span class="badge bg-@GetShiftStatusColor(shift.Status)">
                                                            @shift.Status
                                                        </span>
                                                    </div>
                                                    <p class="card-text small mb-2">
                                                        <strong><i class="fas fa-calendar me-1"></i>Opdracht:</strong><br/>
                                                        @eventItem.Name
                                                    </p>
                                                    <p class="card-text small mb-2">
                                                        <strong><i class="fas fa-map-marker-alt me-1"></i>Locatie:</strong><br/>
                                                        @eventItem.Location
                                                    </p>
                                                    <p class="card-text small mb-2">
                                                        <strong><i class="fas fa-clock me-1"></i>Tijd:</strong><br/>
                                                        @shift.StartTime.ToString("dd MMM yyyy HH:mm") - @shift.EndTime.ToString("HH:mm")
                                                    </p>
                                                    @if (shift.Description != null)
                                                    {
                                                        <p class="card-text small mb-2">
                                                            <strong><i class="fas fa-info-circle me-1"></i>Beschrijving:</strong><br/>
                                                            @shift.Description
                                                        </p>
                                                    }
                                                    <div class="mt-3">
                                                        <span class="badge bg-@GetRoleColor(assignment.Role) me-1">
                                                            <i class="fas fa-user-tag me-1"></i>@assignment.Role
                                                        </span>
                                                        <span class="badge bg-@GetAssignmentStatusColor(assignment.Status) me-1">
                                                            @assignment.Status
                                                        </span>
                                                        <a href="@($"/api/calendar/shift/{shift.Id}.ics")" class="btn btn-sm btn-success ms-2" title="Download calendar file">
                                                            <i class="fas fa-download"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">Je hebt momenteel geen toegewezen diensten</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (isAdmin)
        {
        <!-- Quick Actions and Upcoming Events -->
        <div class="row">
            <!-- Quick Actions -->
            <div class="col-lg-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent border-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-bolt me-2 text-primary"></i>Snelle acties
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/events" class="btn btn-outline-primary">
                                <i class="fas fa-plus me-2"></i>Opdracht aanmaken
                            </a>
                            <a href="/staff" class="btn btn-outline-info">
                                <i class="fas fa-user-plus me-2"></i>Personeel toevoegen
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Upcoming Events -->
            <div class="col-lg-8 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-calendar-check me-2 text-primary"></i>Aankomende opdrachten
                        </h5>
                        <a href="/events" class="btn btn-sm btn-outline-primary">Alles bekijken</a>
                    </div>
                    <div class="card-body">
                        @if (upcomingEvents.Any())
                        {
                            @foreach (var eventItem in upcomingEvents.Take(5))
                            {
                                <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                                    <div class="flex-shrink-0">
                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            <i class="fas fa-calendar text-primary"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">@eventItem.Name</h6>
                                        <p class="text-muted mb-1">
                                            <i class="fas fa-map-marker-alt me-1"></i>@eventItem.Location
                                        </p>
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>@eventItem.StartDate.ToString("MMM dd, yyyy HH:mm")
                                        </small>
                                    </div>
                                    <div class="flex-shrink-0">
                                        <span class="badge bg-@GetEventStatusColor(eventItem.Status)">
                                            @eventItem.Status
                                        </span>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Geen aankomende opdrachten</p>
                                <a href="/events" class="btn btn-primary">Eerste opdracht aanmaken</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Today's Shifts -->
        @if (todaysShifts.Any())
        {
            <div class="row">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-clock me-2 text-success"></i>Diensten van vandaag
                            </h5>
                            <a href="/shifts" class="btn btn-sm btn-outline-success">Alle diensten bekijken</a>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var shift in todaysShifts)
                                {
                                    <div class="col-md-6 col-lg-4 mb-3">
                                        <div class="card border-0 bg-light">
                                            <div class="card-body">
                                                <h6 class="card-title">@shift.Name</h6>
                                                <p class="card-text small">
                                                    <strong>Opdracht:</strong> @shift.Event.Name<br>
                                                    <strong>Tijd:</strong> @shift.StartTime.ToString("HH:mm") - @shift.EndTime.ToString("HH:mm")<br>
                                                    <strong>Personeel:</strong> @shift.StaffAssignments.Count / @shift.RequiredStaff
                                                </p>
                                                <span class="badge bg-@GetShiftStatusColor(shift.Status)">
                                                    @shift.Status
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        }
    }
</div>

@code {
    private bool isLoading = true;
    private bool isAdmin = false;
    private List<Entities.Event> upcomingEvents = new();
    private List<Entities.Shift> activeShifts = new();
    private List<Entities.Shift> todaysShifts = new();
    private List<Entities.Staff> activeStaff = new();
    private List<Entities.StaffAssignment> myAssignments = new();
    private Entities.Staff? currentUserStaff;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Check if user is admin
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            isAdmin = user.IsInRole("Admin");

            if (isAdmin)
            {
                var loadTasks = new List<Task>
                {
                    LoadUpcomingEventsAsync(),
                    LoadActiveShiftsAsync(),
                    LoadTodaysShiftsAsync(),
                    LoadActiveStaffAsync()
                };

                await Task.WhenAll(loadTasks);
            }
            else
            {
                // Load user-specific assignments
                await LoadMyAssignmentsAsync(user);
            }
        }
        catch (Exception ex)
        {
            // Log the exception
            Console.WriteLine($"Error loading dashboard data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadUpcomingEventsAsync()
    {
        upcomingEvents = await EventService.GetUpcomingEventsAsync();
    }

    private async Task LoadActiveShiftsAsync()
    {
        var allShifts = await ShiftService.GetUpcomingShiftsAsync();
        var now = DateTime.UtcNow;
        activeShifts = allShifts.Where(s => s.StartTime <= now && s.EndTime >= now).ToList();
    }

    private async Task LoadTodaysShiftsAsync()
    {
        todaysShifts = await ShiftService.GetShiftsByDateAsync(DateTime.Today);
    }

    private async Task LoadActiveStaffAsync()
    {
        var allStaff = await StaffService.GetActiveStaffAsync();
        var allUsers = await UserManager.GetUsersInRoleAsync("Admin");
        var adminEmails = allUsers.Select(u => u.Email).ToList();
        
        // Exclude admin users
        activeStaff = allStaff
            .Where(s => !adminEmails.Contains(s.Email))
            .ToList();
    }

    private async Task LoadMyAssignmentsAsync(System.Security.Claims.ClaimsPrincipal user)
    {
        try
        {
            var userEmail = user.Identity?.Name;
            if (string.IsNullOrEmpty(userEmail))
                return;

            // Find staff member by email
            var allStaff = await StaffService.GetAllStaffAsync();
            currentUserStaff = allStaff.FirstOrDefault(s => s.Email.Equals(userEmail, StringComparison.OrdinalIgnoreCase));

            if (currentUserStaff != null)
            {
                // Get all assignments for this staff member
                var allAssignments = await StaffAssignmentService.GetAssignmentsByStaffIdAsync(currentUserStaff.Id);
                
                // Filter to show upcoming and recent assignments
                var cutoffDate = DateTime.Now.AddDays(-7); // Show last 7 days
                myAssignments = allAssignments
                    .Where(a => a.Shift.StartTime >= cutoffDate)
                    .ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading user assignments: {ex.Message}");
        }
    }

    private string GetEventStatusColor(EventStatus status)
    {
        return status switch
        {
            EventStatus.Requested => "warning",
            EventStatus.Planned => "primary",
            EventStatus.Active => "success",
            EventStatus.Completed => "secondary",
            EventStatus.Cancelled => "danger",
            _ => "secondary"
        };
    }

    private string GetShiftStatusColor(ShiftStatus status)
    {
        return status switch
        {
            ShiftStatus.Open => "primary",
            ShiftStatus.Full => "info",
            ShiftStatus.InProgress => "success",
            ShiftStatus.Completed => "secondary",
            ShiftStatus.Cancelled => "danger",
            _ => "secondary"
        };
    }

    private string GetAssignmentStatusColor(AssignmentStatus status)
    {
        return status switch
        {
            AssignmentStatus.Assigned => "primary",
            AssignmentStatus.Confirmed => "info",
            AssignmentStatus.CheckedIn => "success",
            AssignmentStatus.CheckedOut => "secondary",
            AssignmentStatus.NoShow => "danger",
            _ => "secondary"
        };
    }

    private string GetRoleColor(StaffRole role)
    {
        return role switch
        {
            StaffRole.LOTUS => "primary",
            StaffRole.Coordinator => "warning",
            _ => "secondary"
        };
    }
}
