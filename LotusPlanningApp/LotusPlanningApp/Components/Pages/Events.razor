@page "/events"
@attribute [Authorize(Roles = "Admin")]
@using Application
@using Application.DataAdapters
@using Application.Commands.Events
@using Application.Commands.Shifts
@using Application.Queries.Events
@using Application.Queries.Shifts
@using Application.Queries.Customers
@using Entities
@using Microsoft.AspNetCore.Components.Forms
@using LotusPlanningApp.Services
@inject GetAllEventsQueryHandler GetAllEventsHandler
@inject GetEventByIdQueryHandler GetEventByIdHandler
@inject CreateEventCommandHandler CreateEventHandler
@inject UpdateEventCommandHandler UpdateEventHandler
@inject DeleteEventCommandHandler DeleteEventHandler
@inject CreateShiftCommandHandler CreateShiftHandler
@inject DeleteShiftCommandHandler DeleteShiftHandler
@inject ICustomerService CustomerService
@inject NavigationManager Navigation

@rendermode InteractiveServer

<PageTitle>Opdrachten - LOTUS Planning App</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-primary">
                        <i class="fas fa-calendar-alt me-2"></i>Opdrachten
                    </h1>
                    <p class="text-muted">Beheer LOTUS-opdrachten</p>
                </div>
                <button class="btn btn-primary" @onclick="OpenCreateEventDialog">
                    <i class="fas fa-plus me-2"></i>Opdracht aanmaken
                </button>
            </div>
        </div>
    </div>

    @if (hasError)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Fout bij het laden van opdrachten</strong>
            <p class="mb-2">@errorMessage</p>
            <button class="btn btn-outline-danger btn-sm" @onclick="RetryLoadEvents">
                <i class="fas fa-redo me-1"></i>Opnieuw proberen
            </button>
        </div>
    }
    else if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Bezig met laden...</span>
            </div>
        </div>
    }
    else if (!events.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-calendar-times fa-4x text-muted mb-4"></i>
            <h4 class="text-muted">Geen opdrachten gevonden</h4>
            <p class="text-muted mb-4">Begin met het aanmaken van je eerste LOTUS-opdracht.</p>
            <button class="btn btn-primary btn-lg" @onclick="OpenCreateEventDialog">
                <i class="fas fa-plus me-2"></i>Eerste opdracht aanmaken
            </button>
        </div>
    }
    else
    {
        <!-- Filter, Search, and View Toggle -->
        <div class="row mb-4">
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Zoek opdrachten..." @bind="searchTerm" @oninput="OnSearchChanged" />
                </div>
            </div>
            <div class="col-md-2">
                <select class="form-select" @bind="statusFilter" @bind:after="OnFilterChanged">
                    <option value="">Alle statussen</option>
                    <option value="@EventStatus.Requested">Aangevraagd</option>
                    <option value="@EventStatus.Planned">Gepland</option>
                    <option value="@EventStatus.Confirmed">Bevestigd</option>
                    <option value="@EventStatus.Active">Actief</option>
                    <option value="@EventStatus.Completed">Afgerond</option>
                    <option value="@EventStatus.SendInvoice">Factuur verzenden</option>
                    <option value="@EventStatus.Cancelled">Geannuleerd</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select" @bind="sortBy" @bind:after="OnSortChanged">
                    <option value="StartDate">Sorteren op startdatum</option>
                    <option value="Name">Sorteren op naam</option>
                    <option value="Location">Sorteren op locatie</option>
                    <option value="Status">Sorteren op status</option>
                </select>
            </div>
            <div class="col-md-3">
                <div class="d-flex justify-content-end">
                    <div class="btn-group" role="group" aria-label="View options">
                        <button type="button" 
                                class="btn @(viewMode == "cards" ? "btn-primary" : "btn-outline-primary")" 
                                @onclick="@(() => SetViewMode("cards"))"
                                title="Kaartenweergave">
                            <i class="fas fa-th-large me-1"></i>Kaarten
                        </button>
                        <button type="button" 
                                class="btn @(viewMode == "table" ? "btn-primary" : "btn-outline-primary")" 
                                @onclick="@(() => SetViewMode("table"))"
                                title="Tabelweergave">
                            <i class="fas fa-table me-1"></i>Tabel
                        </button>
                        <button type="button" 
                                class="btn btn-outline-primary" 
                                @onclick="NavigateToCalendarView"
                                title="Kalenderweergave">
                            <i class="fas fa-calendar me-1"></i>Kalender
                        </button>
                    </div>
                </div>
            </div>
        </div>

        @if (viewMode == "cards")
        {
            <!-- Events Card View -->
            <div class="row">
                @foreach (var eventItem in filteredEvents)
                {
                    <div class="col-lg-6 col-xl-4 mb-4" @onclick="CloseDropdown">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title mb-0">
                                        @eventItem.Name
                                        @if (HasUnplannedShifts(eventItem))
                                        {
                                            <span class="badge bg-danger ms-2">
                                                <i class="fas fa-exclamation-triangle me-1"></i>Onvolledig
                                            </span>
                                        }
                                    </h5>
                                    <span class="badge bg-@GetEventStatusColor(eventItem.Status)">
                                        @eventItem.Status
                                    </span>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <i class="fas fa-map-marker-alt text-muted me-2"></i>
                                    <span class="text-muted">@eventItem.Location</span>
                                </div>
                                <div class="mb-3">
                                    <i class="fas fa-calendar text-muted me-2"></i>
                                    <span class="text-muted">
                                        @eventItem.StartDate.ToString("MMM dd, yyyy")
                                    </span>
                                    @if (eventItem.StartDate.Date != eventItem.EndDate.Date)
                                    {
                                        <span class="text-muted"> - @eventItem.EndDate.ToString("MMM dd, yyyy")</span>
                                    }
                                </div>
                                <div class="mb-3">
                                    <i class="fas fa-clock text-muted me-2"></i>
                                    <span class="text-muted">
                                        @eventItem.StartDate.ToString("HH:mm") - @eventItem.EndDate.ToString("HH:mm")
                                    </span>
                                </div>
                                @if (!string.IsNullOrEmpty(eventItem.Description))
                                {
                                    <p class="card-text text-muted small">
                                        @(eventItem.Description.Length > 100 ? eventItem.Description.Substring(0, 100) + "..." : eventItem.Description)
                                    </p>
                                }
                                @if (!string.IsNullOrEmpty(eventItem.ContactPerson))
                                {
                                    <div class="mb-2">
                                        <i class="fas fa-user text-muted me-2"></i>
                                        <span class="text-muted small">@eventItem.ContactPerson</span>
                                        @if (!string.IsNullOrEmpty(eventItem.ContactPhone))
                                        {
                                            <br>
                                            <i class="fas fa-phone text-muted me-2"></i>
                                            <span class="text-muted small">@eventItem.ContactPhone</span>
                                        }
                                        @if (!string.IsNullOrEmpty(eventItem.ContactEmail))
                                        {
                                            <br>
                                            <i class="fas fa-envelope text-muted me-2"></i>
                                            <span class="text-muted small">@eventItem.ContactEmail</span>
                                        }
                                    </div>
                                }
                            </div>
                            <div class="card-footer bg-transparent border-0">
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>@eventItem.Shifts.Count dienst(en)
                                    </small>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-sm btn-outline-primary" @onclick="@((e) => NavigateToDetails(eventItem.Id))" @onclick:stopPropagation="true">
                                            Details bekijken
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="@((e) => ConfirmDelete(eventItem))" @onclick:stopPropagation="true">
                                            <i class="fas fa-trash me-1"></i>Verwijderen
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Events Table View -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-table me-2"></i>Opdrachtenoverzicht (@filteredEvents.Count)
                        </h5>
                        <small class="text-muted">@filteredEvents.Count van @events.Count opdrachten</small>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Opdrachtnaam</th>
                                    <th scope="col">Datum & tijd</th>
                                    <th scope="col">Locatie</th>
                                    <th scope="col">Contact</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Diensten</th>
                                    <th scope="col" class="text-center">Acties</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var eventItem in filteredEvents)
                                {
                                    <tr class="@(eventItem.Status == EventStatus.Cancelled ? "table-secondary" : "")">
                                        <td>
                                            <div class="fw-medium">@eventItem.Name</div>
                                            @if (!string.IsNullOrEmpty(eventItem.Description))
                                            {
                                                <small class="text-muted">
                                                    @(eventItem.Description.Length > 60 ? eventItem.Description.Substring(0, 60) + "..." : eventItem.Description)
                                                </small>
                                            }
                                        </td>
                                        <td>
                                            <div class="fw-medium">@eventItem.StartDate.ToString("MMM dd, yyyy")</div>
                                            <small class="text-muted">
                                                @eventItem.StartDate.ToString("HH:mm") - @eventItem.EndDate.ToString("HH:mm")
                                                @if (eventItem.StartDate.Date != eventItem.EndDate.Date)
                                                {
                                                    <text><br/>tot @eventItem.EndDate.ToString("MMM dd")</text>
                                                }
                                            </small>
                                        </td>
                                        <td>
                                            <div class="text-wrap" style="max-width: 200px;">
                                                @(eventItem.Location.Length > 50 ? eventItem.Location.Substring(0, 50) + "..." : eventItem.Location)
                                            </div>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(eventItem.ContactPerson))
                                            {
                                                <div class="fw-medium">@eventItem.ContactPerson</div>
                                                @if (!string.IsNullOrEmpty(eventItem.ContactPhone))
                                                {
                                                    <small class="text-muted d-block">
                                                        <i class="fas fa-phone me-1"></i>@eventItem.ContactPhone
                                                    </small>
                                                }
                                                @if (!string.IsNullOrEmpty(eventItem.ContactEmail))
                                                {
                                                    <small class="text-muted d-block">
                                                        <i class="fas fa-envelope me-1"></i>@eventItem.ContactEmail
                                                    </small>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">Geen contactpersoon</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <span class="badge bg-@GetEventStatusColor(eventItem.Status)">
                                                    @eventItem.Status
                                                </span>
                                                @if (HasUnplannedShifts(eventItem))
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-exclamation-triangle me-1"></i>Onvolledig
                                                    </span>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="fw-medium me-2">@eventItem.Shifts.Count</span>
                                                @if (eventItem.Shifts.Count == 0)
                                                {
                                                    <span class="badge bg-warning text-dark">Geen diensten</span>
                                                }
                                                else
                                                {
                                                    var totalRequired = eventItem.Shifts.Sum(s => s.RequiredStaff);
                                                    var totalAssigned = eventItem.Shifts.Sum(s => s.StaffAssignments.Count);
                                                    if (totalAssigned >= totalRequired)
                                                    {
                                                        <span class="badge bg-success">Volledig bezet</span>
                                                    }
                                                    else if (totalAssigned > 0)
                                                    {
                                                        <span class="badge bg-warning text-dark">Gedeeltelijk</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Onbezet</span>
                                                    }
                                                }
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-sm btn-outline-primary" @onclick="@((e) => NavigateToDetails(eventItem.Id))" @onclick:stopPropagation="true">
                                                    <i class="fas fa-edit me-1"></i>Details
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger" @onclick="@((e) => ConfirmDelete(eventItem))" @onclick:stopPropagation="true">
                                                    <i class="fas fa-trash me-1"></i>Verwijderen
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!-- Click outside overlay to close dropdown -->
@if (openDropdownId.HasValue)
{
    <div class="position-fixed top-0 start-0 w-100 h-100" style="z-index: 1040; background: transparent;" @onclick="CloseDropdown"></div>
}

<!-- Delete Confirmation Modal -->
@if (eventToDelete is not null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5); z-index: 1055;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Verwijderen bevestigen</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Weet je zeker dat je de opdracht "<strong>@eventToDelete.Name</strong>" wilt verwijderen?</p>
                    <p class="text-danger small">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        Deze actie kan niet ongedaan worden gemaakt en verwijdert ook alle gekoppelde diensten en toewijzingen.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Annuleren</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteEvent" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Opdracht verwijderen
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Create Event Modal -->
@if (showCreateDialog)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5); z-index: 1055;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-calendar-plus me-2"></i>Nieuwe opdracht
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseCreateEventDialog"></button>
                </div>
                <EditForm Model="newEvent" OnValidSubmit="CreateEvent">
                    <DataAnnotationsValidator />
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Opdrachtnaam *</label>
                                <InputText @bind-Value="newEvent.Name" class="form-control" placeholder="Voer een opdrachtnaam in" />
                                <ValidationMessage For="() => newEvent.Name" class="text-danger" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Locatie *</label>
                                <InputTextArea @bind-Value="newEvent.Location" class="form-control" rows="5" placeholder="Voer de locatie van de opdracht in" />
                                <ValidationMessage For="() => newEvent.Location" class="text-danger" />
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Je kunt meerdere regels invullen voor een gedetailleerd adres of locatie-informatie
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Startdatum & tijd *</label>
                                <input type="datetime-local" @bind="newEvent.StartDate" class="form-control" />
                                <ValidationMessage For="() => newEvent.StartDate" class="text-danger" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Einddatum & tijd *</label>
                                <input type="datetime-local" @bind="newEvent.EndDate" class="form-control" />
                                <ValidationMessage For="() => newEvent.EndDate" class="text-danger" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Klant</label>
                            <select class="form-select" @bind="selectedCustomerId" @bind:after="OnCustomerSelected">
                                <option value="0">-- Selecteer een klant (optioneel) --</option>
                                @foreach (var customer in customers)
                                {
                                    <option value="@customer.Id">@customer.FullName @(!string.IsNullOrEmpty(customer.Company) ? $"({customer.Company})" : "")</option>
                                }
                            </select>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Als je een klant selecteert, worden contactgegevens automatisch ingevuld
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Contactpersoon</label>
                                <InputText @bind-Value="newEvent.ContactPerson" class="form-control" placeholder="Naam contactpersoon" />
                                <ValidationMessage For="() => newEvent.ContactPerson" class="text-danger" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Telefoon contactpersoon</label>
                                <InputText @bind-Value="newEvent.ContactPhone" class="form-control" placeholder="Telefoonnummer contactpersoon" />
                                <ValidationMessage For="() => newEvent.ContactPhone" class="text-danger" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">E-mail contactpersoon</label>
                                <InputText @bind-Value="newEvent.ContactEmail" class="form-control" placeholder="E-mailadres contactpersoon" type="email" />
                                <ValidationMessage For="() => newEvent.ContactEmail" class="text-danger" />
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Vereist voor statusmeldingen (Gepland, Bevestigd)
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Beschrijving</label>
                            <InputTextArea @bind-Value="newEvent.Description" class="form-control" rows="3" placeholder="Omschrijving van de opdracht (optioneel)" />
                            <ValidationMessage For="() => newEvent.Description" class="text-danger" />
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Let op:</strong> De opdracht wordt aangemaakt met de status "Aangevraagd" en er wordt automatisch één dienst toegevoegd die de volledige duur dekt.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseCreateEventDialog">Annuleren</button>
                        <button type="submit" class="btn btn-primary" disabled="@isCreating">
                            @if (isCreating)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            <i class="fas fa-save me-2"></i>Opdracht aanmaken
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

<!-- Edit Event Modal -->
@if (showEditDialog)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5); z-index: 1055;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-edit me-2"></i>Opdracht bewerken
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseEditEventDialog"></button>
                </div>
                <EditForm Model="editEvent" OnValidSubmit="UpdateEvent">
                    <DataAnnotationsValidator />
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Opdrachtnaam *</label>
                                <InputText @bind-Value="editEvent.Name" class="form-control" placeholder="Voer een opdrachtnaam in" />
                                <ValidationMessage For="() => editEvent.Name" class="text-danger" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Locatie *</label>
                                <InputTextArea @bind-Value="editEvent.Location" class="form-control" rows="2" placeholder="Voer de locatie van de opdracht in" />
                                <ValidationMessage For="() => editEvent.Location" class="text-danger" />
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Je kunt meerdere regels invullen voor een gedetailleerd adres of locatie-informatie
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Startdatum & tijd *</label>
                                <input type="datetime-local" value="@editEvent.StartDate.ToString("yyyy-MM-ddTHH:mm")" @onchange="OnEditStartDateChanged" class="form-control" />
                                <ValidationMessage For="() => editEvent.StartDate" class="text-danger" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Einddatum & tijd *</label>
                                <input type="datetime-local" @bind="editEvent.EndDate" class="form-control" />
                                <ValidationMessage For="() => editEvent.EndDate" class="text-danger" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Klant</label>
                            <select class="form-select" @bind="selectedCustomerIdForEdit" @bind:after="OnCustomerSelectedForEdit">
                                <option value="0">-- Selecteer een klant (optioneel) --</option>
                                @foreach (var customer in customers)
                                {
                                    <option value="@customer.Id">@customer.FullName @(!string.IsNullOrEmpty(customer.Company) ? $"({customer.Company})" : "")</option>
                                }
                            </select>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Als je een klant selecteert, worden contactgegevens automatisch ingevuld
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Status *</label>
                                <InputSelect @bind-Value="editEvent.Status" class="form-select">
                                    <option value="@EventStatus.Requested">Aangevraagd</option>
                                    <option value="@EventStatus.Planned">Gepland</option>
                                    <option value="@EventStatus.Confirmed">Bevestigd</option>
                                    <option value="@EventStatus.Active">Actief</option>
                                    <option value="@EventStatus.Completed">Afgerond</option>
                                    <option value="@EventStatus.SendInvoice">Factuur verzenden</option>
