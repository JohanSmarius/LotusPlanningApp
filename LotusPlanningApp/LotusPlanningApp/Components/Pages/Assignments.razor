@page "/assignments"
@attribute [Authorize(Roles = "Admin")]
@rendermode InteractiveServer

<PageTitle>Toewijzingen - LOTUS Planning App</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-primary">
                        <i class="fas fa-user-check me-2"></i>Personeelstoewijzingen
                    </h1>
                    <p class="text-muted">Beheer personeelsinzet voor diensten</p>
                </div>
                <a href="/assignments/create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Toewijzing maken
                </a>
            </div>
        </div>
    </div>

    <div class="text-center py-5">
        <i class="fas fa-user-check fa-4x text-muted mb-4"></i>
        <h4 class="text-muted">Toewijzingsbeheer</h4>
        <p class="text-muted mb-4">Deze pagina toont alle personeelsinzet en hun status.</p>
        <a href="/assignments/create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i>Eerste toewijzing maken
        </a>
    </div>
</div>
